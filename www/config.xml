<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://phonegap.com/ns/1.0" id="co.uk.caserevision" version="1.0.9">
    <name>CaseReVision</name>
    <description>
        CaseReVision Limited.
    </description>
    <author email="enquiries@caserevision.co.uk" href="http://cordova.io">
        CaseReVision
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"  />

    <allow-navigation href="http://example.com/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="*://*.example.com/*" />
    <allow-intent href="sms:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="geo:*" />

    <access origin="*" browserOnly="true"/>

    <meta http-equiv="Content-Security-Policy" content="default-src 'self' data: gap: https://ssl.gstatic.com; style-src 'self' 'unsafe-inline'; media-src *"/>

    <!--<preference name="orientation" value="default"/>-->
    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="target-device" value="universal" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="500" />
    <preference name="DisallowOverscroll" value="true"/>
    <gap:plugin name="org.apache.cordova.statusbar" version="0.1.4"/>
    <gap:plugin name="org.apache.cordova.splashscreen"/>
    <gap:plugin name="com.ionic.keyboard" version="1.0.3"/>
    <gap:plugin name="org.apache.cordova.device"/>
    <gap:plugin name="net.yoik.cordova.plugins.screenorientation" version="1.3.1"/>
    <gap:plugin name="org.apache.cordova.InAppBrowser"/>

    <!--<preference name="fullscreen" value="false"/>-->
    <!--<preference name="webviewbounce" value="false"/>-->
    <uses-permission name="com.android.vending.BILLING"/>

    <icon src="res/icon/1.png"/>

    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />

        <gap:plugin name="cc.fovea.cordova.purchase" source="npm" version="4.0.0">
            <param name="BILLING_KEY" value=""/>
        </gap:plugin>

        <icon src="/res/icon/android/icon-57.png" height="57" width="57"/>
        <icon src="/res/icon/android/icon-72.png" height="72" width="72"/>
        <icon src="/res/icon/android/2.png"/>

        <splash src="/res/screen/android/splash.png"/>
    </platform>

    <!--<splash src="res/screen/splash.png"/>-->
    <!--<gap:splash src="res/screen/splash.png"/>-->

    <platform name="ios">

        <gap:plugin name="cc.fovea.cordova.purchase" source="npm" version="4.0.0" />

        <icon src="/res/icon/ios/icon-57.png" height="57" width="57"/>
        <icon src="/res/icon/ios/icon-72.png" height="72" width="72"/>
        <icon src="/res/icon/ios/3.png"/>

        <splash src="res/screen/ios/splash.png"/>
        <splash src="/res/screen/ios/Default-568h@2x~iphone.png" height="1136" width="640"/>

        <config-file parent="UIRequiredDeviceCapabilities">
            <array>
                <string>location-services</string>
            </array>
        </config-file>
    </platform>
</widget>
